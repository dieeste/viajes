<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diego.gastosviajes" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GastosFijos"
            android:label="Gastos Fijos"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.diego.gastosviajes.MainActivity" />
        </activity>
        <activity
            android:name=".Gastos"
            android:parentActivityName=".GastosFijos" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.diego.gastosviajes.GastosFijos" />
        </activity>
        <activity
            android:name=".NuevoGasto"
            android:parentActivityName=".Gastos" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.diego.gastosviajes.Gastos" />
        </activity>
    </application>

</manifest>
